<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.farmingdale.library.controllers.StudentHomeController">

    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

            <Label fx:id="welcomeLabel" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" onAction="#logOut" styleClass="primary" text="Logout" />
        </HBox>
    </top>

    <!-- Tabs -->
    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">

            <!-- Available Books Tab -->
            <Tab text="Available Books">
                <VBox alignment="TOP_CENTER" spacing="12">
                    <padding><Insets bottom="28" left="28" right="28" top="16" /></padding>

                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <Label style="-fx-font-weight: bold;" text="Search by:" />

                        <ComboBox fx:id="searchTypeBox" prefWidth="150">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Title" />
                                    <String fx:value="Author" />
                                    <String fx:value="ID" />
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <TextField fx:id="searchField" promptText="Enter search..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="searchButton" onAction="#onSearch" styleClass="primary" text="Search" />
                    </HBox>

                    <TableView fx:id="availableBooksTable" prefHeight="420" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colAvailableID" prefWidth="80" text="ID" />
                            <TableColumn fx:id="colAvailableTitle" prefWidth="300" text="Title" />
                            <TableColumn fx:id="colAvailableAuthor" prefWidth="200" text="Author" />
                            <TableColumn fx:id="colAvailableAction" prefWidth="140" text="Borrow" />
                        </columns>
                    </TableView>

                </VBox>
            </Tab>


            <!-- My Books Tab -->
            <Tab text="My Books">
                <VBox alignment="TOP_CENTER" spacing="12">
                    <padding><Insets bottom="28" left="28" right="28" top="16" /></padding>

                    <TableView fx:id="myBooksTable" prefHeight="480" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colMyID" prefWidth="80" text="ID" />
                            <TableColumn fx:id="colMyTitle" prefWidth="300" text="Title" />
                            <TableColumn fx:id="colMyAuthor" prefWidth="200" text="Author" />
                            <TableColumn fx:id="colMyDueDate" prefWidth="140" text="Due Date" />
                            <TableColumn fx:id="colMyReturn" prefWidth="140" text="Return" />
                        </columns>
                    </TableView>

                </VBox>
            </Tab>

        </TabPane>
    </center>

</BorderPane>
